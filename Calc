        }
        button {
            background-color: #8B4513; /* SaddleBrown */
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            font-size: 1.2em;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }
        button:hover {
            background-color: #6f4f28; /* Darker brown */
        }
